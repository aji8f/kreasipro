# Security Configuration for Kreasi Pro
# Apache .htaccess — supports Apache 2.2 and 2.4

# ============================================
# URL Rewriting
# ============================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Serve sitemap.xml dynamically
    RewriteRule ^sitemap\.xml$ sitemap.xml.php [L]

    # Force HTTPS (uncomment on VPS with SSL)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

    # Redirect www to non-www (uncomment if needed)
    # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
</IfModule>

# ============================================
# Security Headers
# ============================================
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set X-Permitted-Cross-Domain-Policies "none"
    Header always set Permissions-Policy "camera=(), microphone=(), geolocation=(), payment=()"

    # Remove server fingerprinting headers
    Header unset Server
    Header unset X-Powered-By

    # HSTS — only fires when request is already HTTPS (safe for VPS)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains" env=HTTPS
</IfModule>

# ============================================
# Directory Listing — Disabled
# ============================================
Options -Indexes

# ============================================
# File Access Restrictions
# ============================================

# Protect .htaccess and .htpasswd files
<FilesMatch "^\.ht">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Block backup / swap / editor temp files
<FilesMatch "\.(bak|backup|old|orig|save|swp|sql|dump)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Block log files
<FilesMatch "\.log$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Block internal documentation
<FilesMatch "\.(md|MD)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Block development / test files
<FilesMatch "(^test_|copy|temp|tmp|dev|local)\.php$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Block specific dev files
<Files "index copy.php">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</Files>

# ============================================
# PHP Security Settings
# ============================================
<IfModule mod_php7.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_flag expose_php Off
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_flag session.cookie_httponly On
    php_flag session.cookie_samesite Strict
    php_flag session.use_strict_mode On
    php_flag session.use_only_cookies On
</IfModule>
<IfModule mod_php8.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_flag expose_php Off
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_flag session.cookie_httponly On
    php_flag session.cookie_samesite Strict
    php_flag session.use_strict_mode On
    php_flag session.use_only_cookies On
</IfModule>

# ============================================
# MIME Type Security
# ============================================
<IfModule mod_mime.c>
    AddType application/octet-stream .exe .dll .bat .sh
    AddType text/html .html .htm
    AddType text/css .css
    AddType application/javascript .js
    AddType image/jpeg .jpg .jpeg
    AddType image/png .png
    AddType image/gif .gif
    AddType image/webp .webp
    AddType font/woff2 .woff2
    AddType font/woff .woff
</IfModule>

# ============================================
# Compression (Performance)
# ============================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
    AddOutputFilterByType DEFLATE application/javascript application/json
    AddOutputFilterByType DEFLATE image/svg+xml font/woff2 font/woff
</IfModule>

# ============================================
# Browser Caching (Performance)
# ============================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg    "access plus 1 year"
    ExpiresByType image/png     "access plus 1 year"
    ExpiresByType image/gif     "access plus 1 year"
    ExpiresByType image/webp    "access plus 1 year"
    ExpiresByType text/css      "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType font/woff2    "access plus 1 year"
    ExpiresByType font/woff     "access plus 1 year"
</IfModule>

